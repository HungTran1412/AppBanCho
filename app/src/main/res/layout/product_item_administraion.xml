<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:layout_margin="8dp"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/card_colored_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên: Lucky"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProductAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuổi: 2"
                android:textColor="#444444"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá: 3.000.000₫"
                android:textColor="#444444"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvProductGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giống: Đực"
                android:textColor="#444444"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Update"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sửa" />

                <Button
                    android:id="@+id/Delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="xoá" />
            </LinearLayout>

            <!--            <TextView-->
            <!--                android:id="@+id/tvProductDescription"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Một chú chó đáng yêu và thân thiện."-->
            <!--                android:textSize="15sp"-->
            <!--                android:textColor="#666666"-->
            <!--                android:maxLines="3"-->
            <!--                android:ellipsize="end" />-->
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
